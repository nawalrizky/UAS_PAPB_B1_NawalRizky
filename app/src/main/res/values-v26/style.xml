<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppinsregular</item>

    </style>
    <style name="text_medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppinsmedium</item>

    </style>
    <style name="text_semibold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppinssemibold</item>

    </style>
    <style name="text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppinsbold</item>

    </style>
    <style name="button_bold" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/secondary</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/calender_date</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>
    <style name="EditTextInput" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:paddingStart">14.5dp</item>
        <item name="android:paddingEnd">14.5dp</item>
        <item name="android:textColorHint">@color/text_black_placeholder</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAppearance">@style/text_regular</item>
    </style>

    <style name="DesignSystem.TextInputEditText" parent="EditTextInput">
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="hintTextColor">@color/text_black_placeholder</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTicket"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"

        app:cardBackgroundColor="@color/white"

       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">
            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/kai_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="PT. Kereta Api Indonesia" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_title"
                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"

                >
            <TextView
                android:id="@+id/jam_keberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11.00"
                android:textSize="22dp"
                style="@style/text_bold"/>
                <TextView
                    android:id="@+id/kota_keberangkatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JKT"
                    style="@style/text_regular"/>
            </LinearLayout>

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_train" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    >
                    <TextView
                        android:id="@+id/jam_tiba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11.00"
                        android:textSize="22dp"
                        style="@style/text_bold"/>
                    <TextView
                        android:id="@+id/kota_tiba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JKT"
                        style="@style/text_regular"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_dash"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_dash"
                android:layout_below="@id/layout_hour"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layout_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_dash"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="18sp"
                    style="@style/text_semibold"/>
                <TextView
                    android:id="@+id/harga_tiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=""
                    android:textSize="18sp"
                    style="@style/text_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    style="@style/text_regular"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_beli"
                android:layout_below="@+id/img_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_txt_secondary"
            android:text="Beli Tiket"
            android:textColor="@color/secondary"
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:layout_alignParentEnd="true"
            style="@style/text_semibold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>